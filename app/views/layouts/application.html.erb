<!DOCTYPE html>
<html>
<head>
  <title>NeighborhoodsProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Fugaz+One|Homemade+Apple" rel="stylesheet">
  
</head>
<body>


  <div class="container-fluid" id="headerContainer">
    <header>
      <div class="row">
        
        <a href="/">
        <div class="col-xs-6">
          <h3 id="siteTitle">My <span id="redCursive">Chi</span> Community<span id="betaTitle">BETA</span></h3>
        </div>
        </a>
        
        
        <div class="col-xs-6 text-right" id="actionContainer">
          <% if current_group_rep %>
            <button>
              <%= link_to "Manager", group_rep_events_path(current_group_rep.id) %>
            </button>
            
            <button>
              <%= link_to "Logout", destroy_group_rep_session_path, method: :delete %>
            </button>
          <% else %>
            <button>
              <%= link_to "Login", new_group_rep_session_path %>
            </button>
          <% end %>
          <button>
            <%= link_to "Home", neighborhoods_path %>
          </button>
        </div>
        
      </div>
    </header>

  </div>

  <div class="content">
    <%= yield %>
  </div>
  

</body>
</html>
